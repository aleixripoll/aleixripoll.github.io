---
import { Image } from "astro:assets";
import Social from "@components/Social.astro";
import { markdownify } from "@lib/utils/textConverter";

const { author } = Astro.props;
const { title, image, social } = author.data;
const { Content } = await author.render();

const authorImages = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/images/authors/*.{jpeg,jpg,png,gif,webp}"
);
---

<section class="section">
  <div class="container">
    <div class="mb-4 text-center md:px-24">
      {
        authorImages[image] && (
          <div class="mb-8">
            <Image
              src={authorImages[image]()}
              class="mx-auto rounded-lg"
              height={200}
              width={200}
              alt={title}
            />
          </div>
        )
      }
      <h1 set:html={markdownify(title)} class="page-heading h2 mb-8" />
      {
        author.data.description && (
          <h5 class="mb-8 font-primary font-light text-text">
            {author.data.description}
          </h5>
        )
      }
      {social && <Social source={social} className="social-icons-simple" />}
      <div class="content">
        <Content />
      </div>
    </div>
  </div>
</section>
