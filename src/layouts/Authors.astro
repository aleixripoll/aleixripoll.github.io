---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets'
import { markdownify } from "@lib/utils/textConverter";
import { BsArrowRightCircle } from "react-icons/bs/index.js";
const { authors } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/images/authors/*.{jpeg,jpg,png,gif,webp}");
---

<div class="row justify-center">
  {
    authors.map((author: any) => (
      <div class="col-12 mb-8 sm:col-6 md:col-4">
        {images[author.data.image] && (
          <div class="mb-4">
            <Image
              src={images[author.data.image]()}
              alt={author.data.title}
              height={150}
              width={150}
              class="mx-auto rounded-lg"
            />
          </div>
        )}
        <h3 class="h4 mt-8 mb-3">
          <a href={`/authors/${author.slug}`} class="block hover:text-primary transition duration-200">
            {author.data.title}
          </a>
        </h3>
        {author.data.description &&
          <p class="mb-3 italic" set:text={author.data.description} />
        }
        <p class="mb-3" set:text={markdownify(author.body.slice(0, 70) + "...")} />
        <a href={`/authors/${author.slug}`} class="inline-flex items-center text-primary transition duration-200 hover:opacity-70">
          Saber m√°s <BsArrowRightCircle className="inline ml-2" />
        </a>
      </div>
    ))
  }
</div>
