---
const { section, currentPage, totalPages } = Astro.props;

const indexPageLink = currentPage === 2;
const hasPrevPage = currentPage > 1;
const hasNextPage = totalPages > currentPage;
const numPagesSeparator = 3

let pageList = [];
for (let i = 1; i <= totalPages; i++) {
  if (i > currentPage - numPagesSeparator && i < currentPage + numPagesSeparator || i < numPagesSeparator || i > totalPages - numPagesSeparator) {
    pageList.push(i);
  }
  else if (i === numPagesSeparator && currentPage > numPagesSeparator || i === totalPages - numPagesSeparator && currentPage < totalPages - numPagesSeparator) {
    pageList.push("-")
  }
}
---

{
  totalPages > 1 && (
    <nav
      class="mb-4 flex flex-wrap justify-center space-x-2 space-y-4 text-center"
      aria-label="Pagination"
    >
      {/* previous */}
      {hasPrevPage ? (
        <a
          href={
            indexPageLink
              ? `${
                  section
                    ? import.meta.env.BASE_URL + section
                    : import.meta.env.BASE_URL
                }`
              : `${
                  section
                    ? import.meta.env.BASE_URL + section
                    : import.meta.env.BASE_URL
                }page/${currentPage - 1}`
          }
          class="mt-4 flex h-10 w-10 items-center justify-center rounded-md border border-primary font-semibold leading-[36px] transition duration-200 hover:bg-primary hover:text-white"
        >
          <span class="sr-only">Previous</span>
          <svg
            class="h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      ) : (
        <span class="pointer-events-none mt-4 flex h-10 w-10 items-center justify-center rounded-md border border-gray-400 font-semibold leading-[36px] opacity-40">
          <span class="sr-only">Previous</span>
          <svg
            class="h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        </span>
      )}

      {/* page index */}
      {pageList.map((pagination, i) =>
        pagination === currentPage ? (
          <span
            aria-current="page"
            class={`h-10 w-10 rounded-md border border-primary bg-primary font-semibold leading-[35px] text-white`}
          >
            {pagination}
          </span>
        ) : (
        pagination === "-" ? <span class="pt-1">{pagination}</span> :
        (
          <a
            href={
              i === 0
                ? `${
                    section
                      ? import.meta.env.BASE_URL + section
                      : import.meta.env.BASE_URL
                  }`
                : `${
                    section
                      ? import.meta.env.BASE_URL + section
                      : import.meta.env.BASE_URL
                  }page/${pagination}`
            }
            aria-current="page"
            class={`flex h-10 w-10 items-center justify-center rounded-md border border-primary font-semibold leading-[36px] transition duration-200 hover:bg-primary hover:text-white`}
          >
            {pagination}
          </a>
        ))
      )}
      {/* next page */}
      {hasNextPage ? (
        <a
          href={`${
            section
              ? import.meta.env.BASE_URL + section
              : import.meta.env.BASE_URL
          }page/${currentPage + 1}`}
          class="flex h-10 w-10 items-center justify-center rounded-md border border-primary font-semibold leading-[36px] transition duration-200 hover:bg-primary hover:text-white"
        >
          <span class="sr-only">Next</span>
          <svg
            class="h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      ) : (
        <span class="pointer-events-none flex h-10 w-10 items-center justify-center rounded-md border border-gray-400 font-semibold leading-[36px] opacity-40">
          <span class="sr-only">Next</span>
          <svg
            class="h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        </span>
      )}
    </nav>
  )
}
