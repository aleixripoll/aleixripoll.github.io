---
import Base from "@layouts/Base.astro";
import { getTaxonomy } from "@lib/taxonomyParser.astro";
import { humanize } from "@lib/utils/textConverter";

const categories = await getTaxonomy("posts", "categories");

import { BiCategoryAlt } from "react-icons/bi/index.js";
---

<Base title={"CategorÃ­as"}>
  <section class="section">
    <div class="container text-center">
      <h1 class="h2 page-heading">Categories</h1>
      <ul class="space-x-4 space-y-4">
        {
          categories.map((category) => (
            <li class="inline-block">
              <a
                href={`${import.meta.env.BASE_URL}categories/${category}`}
                class="group flex items-center rounded-lg bg-theme-light dark:bg-theme-dark  px-4 py-2 text-dark dark:text-light hover:bg-primary hover:text-white"
              >
                <BiCategoryAlt className="mr-1 h-6 w-6 scale-75 text-primary group-hover:text-white" />
                <>{humanize(category || "")}</>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Base>
